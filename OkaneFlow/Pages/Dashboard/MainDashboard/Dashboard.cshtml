@page
@model OkaneFlow.Pages.Dashboard.MainDashboard.DashboardModel
@{
    ViewData["Title"] = "Bank Accounts";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Bank Accounts</h1>
            <p class="text-secondary mb-0">Manage your financial accounts</p>
        </div>
        <a asp-page="/Dashboard/MainDashboard/create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> New Account
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Account Name</th>
                            <th class="py-3">Current Balance</th>
                            <th class="pe-4 text-end py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.BankAccounts)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3 text-primary">
                                            <i class="bi bi-bank2"></i>
                                        </div>
                                        @account.AccountName
                                    </div>
                                </td>
                                <td class="fw-bold fs-5 text-dark">
                                    @account.CurrentBalance.ToString("C")
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-link text-secondary p-0" type="button"
                                            data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li><a class="dropdown-item" asp-page="/Dashboard/Category/CategoryPage"
                                                    asp-route-id="@account.AccountID">View Budget</a></li>
                                            <li><a class="dropdown-item" asp-page="/Transactions/Transactions"
                                                    asp-route-accountId="@account.AccountID">View Transactions</a></li>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li><a class="dropdown-item" asp-page="/Dashboard/MainDashboard/edit"
                                                    asp-route-id="@account.AccountID">Edit Account</a></li>
                                            <li><a class="dropdown-item text-danger"
                                                    asp-page="/Dashboard/MainDashboard/delete"
                                                    asp-route-id="@account.AccountID">Delete Account</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
