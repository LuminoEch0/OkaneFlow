@page
@model OkaneFlow.Pages.Dashboard.MainDashboard.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    var prefs = ViewContext.HttpContext.Items["UserPreferences"] as UserPreferenceModel;
    var currency = prefs?.Currency ?? "EUR";
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="fw-bold mb-1">Bank Accounts</h1>
        <p class="text-secondary mb-0">Manage your connected financial accounts</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var account in Model.BankAccounts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm bank-card border-0">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="bi bi-bank fs-4"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical fs-5"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Dashboard/MainDashboard/edit"
                                            asp-route-id="@account.AccountID">
                                            <i class="bi bi-pencil me-2"></i> Edit Account
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Dashboard/MainDashboard/delete"
                                            asp-route-id="@account.AccountID">
                                            <i class="bi bi-trash me-2"></i> Close Account
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <h5 class="card-title fw-bold mb-1">@account.AccountName</h5>
                        <p class="text-secondary small mb-3">Active Account</p>

                        <div class="mt-auto">
                            <p class="text-secondary small fw-bold text-uppercase mb-1">Current Balance</p>
                            <h3 class="fw-bold text-primary mb-0">@FormatHelper.FormatCurrency(account.CurrentBalance,
                            currency)</h3>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <a asp-page="/Dashboard/Category/CategoryPage" asp-route-id="@account.AccountID"
                            class="btn btn-outline-primary w-100 fw-bold">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }

        <div class="col">
            <a asp-page="/Dashboard/MainDashboard/create" class="text-decoration-none h-100 d-block">
                <div
                    class="card h-100 border-dashed border-secondary border-opacity-25 add-account-card d-flex align-items-center justify-content-center p-4">
                    <div class="text-center text-secondary">
                        <div class="mb-3">
                            <i class="bi bi-plus-circle-dotted fs-1"></i>
                        </div>
                        <h5 class="fw-bold mb-0">Add New Account</h5>
                    </div>
                </div>
            </a>
        </div>

        @if (!Model.BankAccounts.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="card border-0 shadow-sm p-5">
                    <i class="bi bi-bank fs-1 text-secondary mb-3"></i>
                    <h4 class="fw-bold">No accounts yet</h4>
                    <p class="text-secondary mb-4">Add your first bank account to start tracking your finances.</p>
                    <div class="d-flex justify-content-center">
                        <a asp-page="/Dashboard/MainDashboard/create" class="btn btn-primary px-4">
                            <i class="bi bi-plus-lg me-1"></i> Add Account
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
