@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.MainDashboard.editModel
@{
    ViewData["Title"] = "Edit Account";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Edit Account</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="AccountDetails.AccountID" />
                        <input type="hidden" asp-for="AccountDetails.CurrentBalance" />

                        <div class="mb-3">
                            <label asp-for="AccountDetails.AccountName"
                                class="form-label text-secondary small fw-bold text-uppercase">Account Name</label>
                            <input asp-for="AccountDetails.AccountName" class="form-control" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-secondary small fw-bold text-uppercase">Current
                                Balance</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">$</span>
                                <input value="@Model.AccountDetails.CurrentBalance"
                                    class="form-control border-start-0 ps-0 bg-light" readonly />
                            </div>
                            <div class="form-text">Balances can only be updated via transactions.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <button type="button" onclick="goBack()"
                                class="btn btn-light text-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>

