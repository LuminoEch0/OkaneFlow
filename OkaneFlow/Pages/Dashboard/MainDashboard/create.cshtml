@page
@model OkaneFlow.Pages.Dashboard.MainDashboard.createModel
@{
}
<h2>Create New Bank Account</h2>
<button type="button" onclick="goBack()" class="btn btn-secondary">Back</button>

<form method="post">
    <div>
        <label>Account Name:</label>
        <input asp-for="InputName" class="form-control"/>
        <span asp-validation-for="InputName" class="text-danger"></span>

    </div>

    <div>
        <label>Initial Balance:</label>
        <input asp-for="InitialBalance" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
