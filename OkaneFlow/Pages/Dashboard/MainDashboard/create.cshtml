@page
@model OkaneFlow.Pages.Dashboard.MainDashboard.createModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Create New Account</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="InputName"
                                class="form-label text-secondary small fw-bold text-uppercase">Account Name</label>
                            <input asp-for="InputName" class="form-control" placeholder="e.g., Checking, Savings" />
                            <span asp-validation-for="InputName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="InitialBalance"
                                class="form-label text-secondary small fw-bold text-uppercase">Initial Balance</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">€</span>
                                <input asp-for="InitialBalance" class="form-control border-start-0 ps-0"
                                    placeholder="0.00" />
                            </div>
                            <div class="form-text">This will set the starting balance for your account.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Account</button>
                            <button type="button" onclick="goBack()"
                                class="btn btn-light text-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
