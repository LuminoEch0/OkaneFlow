@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Subscription.createModel
@{
    var prefs = ViewContext.HttpContext.Items["UserPreferences"] as UserPreferenceModel;
    var currencySymbol = FormatHelper.FormatCurrency(0, prefs?.Currency ?? "EUR").Substring(0, 1);
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6" style="max-width: 600px;">
            <h2 class="text-primary fw-bold mb-4">New Subscription</h2>
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Name"
                                class="form-label text-secondary small fw-bold text-uppercase">Name</label>
                            <input asp-for="Input.Name" class="form-control" required placeholder="e.g. Netflix" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Amount"
                                class="form-label text-secondary small fw-bold text-uppercase">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">@currencySymbol</span>
                                <input asp-for="Input.Amount" class="form-control border-start-0 ps-0" type="number"
                                    step="0.01" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Frequency"
                                class="form-label text-secondary small fw-bold text-uppercase">Frequency</label>
                            <select asp-for="Input.Frequency" class="form-select" required>
                                <option value="Monthly">Monthly</option>
                                <option value="Yearly">Yearly</option>
                                <option value="Weekly">Weekly</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.StartDate"
                                class="form-label text-secondary small fw-bold text-uppercase">Start Date</label>
                            <input asp-for="Input.StartDate" class="form-control" type="date"
                                value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.CategoryID"
                                class="form-label text-secondary small fw-bold text-uppercase">Category
                                (Optional)</label>
                            <select asp-for="Input.CategoryID" asp-items="Model.CategoryList" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <div class="form-text">If not selected, a "Subscriptions" category will be used/created.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Description"
                                class="form-label text-secondary small fw-bold text-uppercase">Description</label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Create Subscription</button>
                            <button type="button" onclick="history.back()"
                                class="btn btn-light text-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
