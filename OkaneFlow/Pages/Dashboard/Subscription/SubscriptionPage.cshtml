@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Subscription.SubscriptionPageModel
@{
    ViewData["Title"] = "Subscriptions";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Subscriptions</h1>
            <p class="text-secondary mb-0">Manage your recurring payments</p>
        </div>
        <div>
             <a asp-page="/Dashboard/MainDashboard/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

     <!-- Category/Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Dashboard/Category/CategoryPage" asp-route-id="@RouteData.Values["id"]">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Dashboard/Category/Subscriptions" asp-route-id="@RouteData.Values["id"]">Subscriptions</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Dashboard/Category/Debts" asp-route-id="@RouteData.Values["id"]">Debts</a>
        </li>
    </ul>

    <!-- Filler Data -->
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-danger bg-opacity-10 p-3 rounded-circle text-danger me-3">
                                    <i class="bi bi-play-btn fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-0">Netflix</h5>
                                    <small class="text-secondary">Entertainment</small>
                                </div>
                            </div>
                            <h3 class="fw-bold mb-3">€15.99<small class="text-muted fs-6 fw-normal">/mo</small></h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                                <small class="text-secondary">Next: 25 Dec</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary me-3">
                                    <i class="bi bi-spotify fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-0">Spotify</h5>
                                    <small class="text-secondary">Music</small>
                                </div>
                            </div>
                            <h3 class="fw-bold mb-3">€10.99<small class="text-muted fs-6 fw-normal">/mo</small></h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                                <small class="text-secondary">Next: 28 Dec</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm h-100 border-dashed bg-light d-flex align-items-center justify-content-center text-center p-4">
                        <div>
                            <div class="bg-white p-3 rounded-circle shadow-sm d-inline-block mb-3 text-primary">
                                <i class="bi bi-plus-lg fs-4"></i>
                            </div>
                            <h5 class="fw-bold text-dark mb-1">Add Subscription</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

