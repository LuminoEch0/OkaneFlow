@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Subscription.SubscriptionPageModel
@{
    ViewData["Title"] = "Subscriptions";
}

<div class="container py-4">
    <!-- Header & Navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Subscriptions</h1>
            <p class="text-secondary mb-0">Manage your recurring payments</p>
        </div>
        <div>
            <a asp-page="/Dashboard/MainDashboard/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

    <!-- Category/Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Dashboard/Category/CategoryPage"
                asp-route-id="@Model.id">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Dashboard/Subscription/SubscriptionPage"
                asp-route-id="@Model.id">Subscriptions</a>
        </li>

    </ul>

    <!-- Overview Content -->
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-4">

            @if (Model.UpcomingAlerts != null && Model.UpcomingAlerts.Any())
            {
                <div class="alert alert-warning shadow-sm mb-4" role="alert">
                    <h5 class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Insufficient Funds
                        Alert</h5>
                    <p>The following subscriptions are due within 7 days, and your current balance is insufficient:</p>
                    <ul class="mb-0">
                        @foreach (var alert in Model.UpcomingAlerts)
                        {
                            <li><strong>@alert.Name</strong> - @alert.Amount.ToString("C").Replace("$", "€") (Due:
                                @alert.StartDate.DayOfWeek)</li>
                        }
                    </ul>
                </div>
            }

            <!-- Subscriptions List -->
            <div class="card shadow-sm">
                <div
                    class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
                    <h5 class="mb-0 fw-bold">Active Subscriptions</h5>
                    <a asp-page="/Dashboard/Subscription/create" asp-route-id="@Model.id"
                        class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg"></i> New Subscription
                    </a>
                </div>
                <div class="table-responsive-md pb-5">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">Name</th>
                                <th class="py-3">Amount</th>
                                <th class="py-3">Frequency</th>
                                <th class="py-3">Start Date</th>
                                <th class="pe-4 py-3 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sub in Model.Subscriptions)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@sub.Name</td>
                                    <td>@sub.Amount.ToString("C").Replace("$", "€")</td>
                                    <td>@sub.Frequency</td>
                                    <td>@sub.StartDate.ToString("d")</td>
                                    <td class="pe-4 text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical fs-5"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm">
                                                <li>
                                                    <a class="dropdown-item" asp-page="/Dashboard/Subscription/edit" asp-route-id="@sub.SubscriptionID">
                                                        <i class="bi bi-pencil me-2"></i> Edit Subscription
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" asp-page="/Dashboard/Subscription/delete" asp-route-id="@sub.SubscriptionID">
                                                        <i class="bi bi-x-circle me-2"></i> Cancel Subscription
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
