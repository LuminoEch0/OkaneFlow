@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Debt.DebtPageModel
@{
    ViewData["Title"] = "Debts";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Debts</h1>
            <p class="text-secondary mb-0">Track your liabilities</p>
        </div>
        <div>
            <a asp-page="/Dashboard/MainDashboard/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

    <!-- Category/Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Dashboard/Category/CategoryPage"
                asp-route-id="@RouteData.Values["id"]">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Dashboard/Category/Subscriptions"
                asp-route-id="@RouteData.Values["id"]">Subscriptions</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Dashboard/Category/Debts"
                asp-route-id="@RouteData.Values["id"]">Debts</a>
        </li>
    </ul>

    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-4">Debt Overview</h5>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 45%" aria-valuenow="45"
                            aria-valuemin="0" aria-valuemax="100">45% Paid</div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-secondary">Paid: €4,500</small>
                        <small class="text-secondary">Remaining: €5,500</small>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-3">Creditor</th>
                            <th class="py-3">Amount</th>
                            <th class="py-3">Interest Rate</th>
                            <th class="py-3">Status</th>
                            <th class="py-3 text-end pe-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-3 fw-bold">Student Loan</td>
                            <td>€10,000</td>
                            <td>3.5%</td>
                            <td><span class="badge bg-warning text-dark">Repaying</span></td>
                            <td class="text-end pe-3"><button class="btn btn-sm btn-outline-primary">Pay</button></td>
                        </tr>
                        <tr>
                            <td class="ps-3 fw-bold">Credit Card</td>
                            <td>€2,500</td>
                            <td>18.9%</td>
                            <td><span class="badge bg-danger">Overdue</span></td>
                            <td class="text-end pe-3"><button class="btn btn-sm btn-outline-primary">Pay</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

