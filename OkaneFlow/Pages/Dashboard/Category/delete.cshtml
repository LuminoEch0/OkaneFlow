@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Category.deleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger bg-opacity-10 py-3 border-danger border-opacity-25">
                    <h5 class="mb-0 fw-bold text-danger">Delete Category</h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.AccountDetails != null)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                            <div>
                                Are you sure you want to delete this category? This action cannot be undone.
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Category Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-secondary">Name</dt>
                                <dd class="col-sm-8 fw-bold">@Model.AccountDetails.CategoryName</dd>

                                <dt class="col-sm-4 text-secondary">Allocated</dt>
                                <dd class="col-sm-8">@Model.AccountDetails.AllocatedAmount.ToString("C")</dd>

                                <dt class="col-sm-4 text-secondary">Used</dt>
                                <dd class="col-sm-8">@Model.AccountDetails.AmountUsed.ToString("C")</dd>
                            </dl>
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="AccountDetails.AccountID" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger">Delete Category</button>
                                <a asp-page="/Dashboard/Category/CategoryPage"
                                    asp-route-id="@Model.AccountDetails.AccountID"
                                    class="btn btn-light text-secondary">Cancel</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Category not found.
                        </div>
                        <div class="d-grid">
                            <button type="button" onclick="goBack()" class="btn btn-secondary">Back</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>