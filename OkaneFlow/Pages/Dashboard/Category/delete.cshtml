@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Category.deleteModel
@{
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6" style="max-width: 600px;">
            <h2 class="text-danger fw-bold mb-4">Delete Category</h2>
            <div class="card border-0 shadow-sm border-top border-5 border-danger">
                <div class="card-body p-4">
                    @if (Model.AccountDetails != null)
                    {
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                                <div>
                                    Are you sure you want to delete this category? This action cannot be undone.
                                </div>
                            </div>

                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-4">
                                <h6 class="fw-bold mb-3">Category Details</h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-4 text-secondary">Category Name</dt>
                                    <dd class="col-sm-8 fw-bold">@Model.AccountDetails.CategoryName</dd>

                                    <dt class="col-sm-4 text-secondary">Allocated</dt>
                                    <dd class="col-sm-8 fw-bold">€@Model.AccountDetails.AllocatedAmount.ToString("N2")</dd>

                                    <dt class="col-sm-4 text-secondary">Used</dt>
                                    <dd class="col-sm-8 fw-bold">€@Model.AccountDetails.AmountUsed.ToString("N2")</dd>
                                </dl>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="AccountDetails.AccountID" />
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-danger btn-lg">Delete Category</button>
                                    <button type="button" onclick="history.back()"
                                        class="btn btn-light text-secondary">Cancel</button>
                                </div>
                            </form>
                    }
                    else
                    {
                            <div class="alert alert-danger">Category not found.</div>
                            <div class="d-grid">
                                <button type="button" onclick="history.back()" class="btn btn-secondary">Back</button>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>