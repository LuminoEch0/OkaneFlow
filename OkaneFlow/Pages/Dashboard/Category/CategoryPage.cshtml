@page "{id:guid}"
@model OkaneFlow.Pages.Dashboard.Category.CategoryPageModel
@{
   ViewData["Title"] = "Category";
}
<div class="container py-4">
    <!-- Header & Navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Categories</h1>
            <p class="text-secondary mb-0">Manage your budget allocations</p>
        </div>
        <div class="btn-group shadow-sm rounded-pill overflow-hidden" role="group">
            <button type="button" class="btn btn-light active fw-bold px-4">Overview</button>
            <button type="button" class="btn btn-light px-4">Subscriptions</button>
            <button type="button" class="btn btn-light px-4">Debts</button>
        </div>
    </div>

    <button type="button" onclick="goBack()" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back
    </button>

    <!-- Overview Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary mb-1 fw-bold text-uppercase small">Total Balance</p>
                        <h2 class="fw-bold display-6 mb-0 text-primary">
                            @(Model.Account != null ? Model.Account.CurrentBalance.ToString("C"):"N/A")
                        </h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                        <i class="bi bi-wallet2 fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-secondary mb-1 fw-bold text-uppercase small">Ready to Assign</p>
                        <h2 class="fw-bold display-6 mb-0" style="color:@Model.UnallocatedFontColor">
                            @Model.UnallocatedAmount.ToString("C")
                        </h2>
                    </div>
                    <button class="btn btn-primary shadow-sm" type="button" data-bs-toggle="modal"
                            data-bs-target="#assignModal">
                        Assign Money
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
        <h5 class="mb-0 fw-bold">Budget Categories</h5>
        <a asp-page="/Dashboard/Category/create" asp-route-id="@Model.id" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-lg"></i> New Category
        </a>
    </div>
<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th scope="col" hidden>CategoryID</th>
            <th scope="col" hidden>AccountID</th>
            <th scope="col">Category Name</th>
            <th scope="col">Allocated Amount</th>
            <th scope="col">AmountUsed</th>
            <th class="py-3" style="width: 30%;">Progress</th>

            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            var isUnassigned = category.CategoryName == "Unassigned";
            var percent = category.AllocatedAmount > 0 ? (category.AmountUsed / category.AllocatedAmount) * 100 : 0;
            var progressColor = percent < 75 ? "bg-success" : percent < 100 ? "bg-warning" : "bg-danger";
            <tr>
                <td hidden>@category.CategoryID</td>
                <td hidden>@category.AccountID</td>
                <td>@category.CategoryName</td>
                <td>@category.AllocatedAmount.ToString("C")</td>
                <td>@category.AmountUsed.ToString("C")</td>
                <td>
                    @if (!isUnassigned)
                    {
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar @progressColor" role="progressbar"
                                style="width: @(Math.Min(percent, 100))%" aria-valuenow="@percent" aria-valuemin="0"
                                aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">@percent.ToString("0")% used</small>
                    }
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown"
                                data-bs-boundary="viewport">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                            <li>
                                <a class="dropdown-item" asp-page="/Dashboard/Category/edit"
                                    asp-route-id="@category.CategoryID">Edit</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item text-danger" asp-page="/Dashboard/Category/delete"
                                    asp-route-id="@category.CategoryID">Delete</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    <div class="modal fade" id="assignModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Assign to Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form method="post" asp-page-handler="Assign">
                        <div class="mb-3">
                            <label for="assignAmountModal"
                                   class="form-label text-secondary small fw-bold text-uppercase">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">€</span>
                                <input type="number" step="0.01" min="0" class="form-control border-start-0 ps-0"
                                       id="assignAmountModal" name="AmountToAllocate" required placeholder="0.00"
                                       onclick="this.select()" />
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="assignCategoryModal"
                                   class="form-label text-secondary small fw-bold text-uppercase">Target Category</label>
                            <select class="form-select" id="assignCategoryModal" name="AssignCategoryId" required>
                                <option value="">Select a category...</option>
                                @foreach (var category in Model.Categories.Where(c => c.CategoryName != "Unassigned"))
                                {
                                    <option value="@category.CategoryID">@category.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2">Confirm Assignment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


