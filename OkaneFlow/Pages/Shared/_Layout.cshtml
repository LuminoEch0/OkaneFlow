<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OkaneFlow</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OkaneFlow.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="d-flex min-vh-100">
        <nav class="sidebar bg-white border-end shadow-sm" style="width: 240px;">
            <div class="sidebar-header p-4 border-bottom">
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-area=""
                    asp-page="/Dashboard/MainDashboard/Dashboard">
                    @* <img src="~/images/logo.png" alt="OkaneFlow Logo"
                    style="height:32px;vertical-align:middle;margin-right:8px;" /> *@
                    OkaneFlow
                </a>
            </div>
            <ul class="nav flex-column mt-4">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Account/Profile">
                        <span class="me-2"><i class="bi bi-person-circle"></i></span> Account
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area=""
                        asp-page="/Dashboard/MainDashboard/Dashboard">
                        <span class="me-2"><i class="bi bi-speedometer2"></i></span> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area=""
                        asp-page="/Transactions/Transactions">
                        <span class="me-2"><i class="bi bi-cash-stack"></i></span> Transactions
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Debt/DebtPage">
                        <span class="me-2"><i class="bi bi-credit-card-2-front"></i></span> Debts
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/People/ChatPage">
                        <span class="me-2"><i class="bi bi-people"></i></span> People
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Account/Logout">
                        <span class="me-2"><i class="bi bi-box-arrow-right"></i></span> Logout
                    </a>
                </li>
            </ul>
        </nav>
        <div class="flex-grow-1 d-flex flex-column">
            <header class="bg-light border-bottom py-3 px-4 mb-3">
                <h1 class="h4 mb-0">@ViewData["Title"]</h1>
            </header>
            <main role="main" class="flex-grow-1 px-4 pb-4">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted py-3 px-4 bg-white shadow-sm">
                <div class="container-fluid text-center">
                    &copy; 2025 - OkaneFlow - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
