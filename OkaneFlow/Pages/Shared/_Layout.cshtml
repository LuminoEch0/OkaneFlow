<!DOCTYPE html>
@using Service.Models
@{
    var prefs = ViewContext.HttpContext.Items["UserPreferences"] as UserPreferenceModel;
    var isDarkMode = prefs?.DarkMode ?? false;
}
<html lang="en" class="@(isDarkMode ? "dark" : "")">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OkaneFlow</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OkaneFlow.styles.css" asp-append-version="true" />
</head>

<body class="@(isDarkMode ? "dark-mode" : "") overflow-x-hidden">
    <div class="d-flex min-vh-100">
        <!-- Sticky Sidebar -->
        <nav class="sidebar bg-white border-end shadow-sm sticky-top flex-shrink-0" style="width: 240px; height: 100vh; overflow-y: auto;">
            <div class="sidebar-header p-4 border-bottom">
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-area=""
                    asp-page="/Dashboard/MainDashboard/Dashboard">
                    OkaneFlow
                </a>
            </div>
            <ul class="nav flex-column mt-4">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Account/Profile">
                        <span class="me-2"><i class="bi bi-person-circle"></i></span> Account
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Admin/Dashboard">
                            <span class="me-2"><i class="bi bi-speedometer2"></i></span> Admin Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Admin/UserManager">
                            <span class="me-2"><i class="bi bi-person-gear"></i></span> User Manager
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area=""
                            asp-page="/Dashboard/MainDashboard/Dashboard">
                            <span class="me-2"><i class="bi bi-speedometer2"></i></span> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area=""
                            asp-page="/Transactions/Transactions">
                            <span class="me-2"><i class="bi bi-cash-stack"></i></span> Transactions
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Debt/DebtPage">
                            <span class="me-2"><i class="bi bi-credit-card-2-front"></i></span> Debts
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/People/ChatPage">
                            <span class="me-2"><i class="bi bi-people"></i></span> People
                        </a>
                    </li>
                }
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-area="" asp-page="/Account/Logout">
                        <span class="me-2"><i class="bi bi-box-arrow-right"></i></span> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column min-vw-0">
            <main role="main" class="flex-grow-1 px-4 pb-4">
                @RenderBody()
            </main>
            <footer class="footer text-muted py-4 px-4 mt-auto">
                <div class="container-fluid">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                        <div class="mb-1 mb-md-0">
                            <span class="small opacity-75">&copy; @DateTime.Now.Year <span class="fw-bold text-primary">OkaneFlow</span>. Simple wealth management.</span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
