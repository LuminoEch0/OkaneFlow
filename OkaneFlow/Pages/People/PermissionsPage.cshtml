@page
@model OkaneFlow.Pages.People.PermissionsPageModel
@{
}
<div class="container py-4">
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a asp-area="" asp-page="/People/ChatPage" class="nav-link active">Chats</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/People/PermissionsPage" class="nav-link">Permissions</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/People/OtherDashboardPage" class="nav-link">Other Dashboard</a>
        </li>
    </ul>
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Role Management</h5>
        </div>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">User</th>
                        <th>Role</th>
                        <th>Access Level</th>
                        <th>Last Active</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 fw-bold">Admin User</td>
                        <td><span class="badge bg-primary">Administrator</span></td>
                        <td>Full Access</td>
                        <td>Today</td>
                        <td class="text-end pe-4"><button class="btn btn-sm btn-light border">Edit</button></td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold">John Doe</td>
                        <td><span class="badge bg-info text-dark">Editor</span></td>
                        <td>Read/Write</td>
                        <td>Yesterday</td>
                        <td class="text-end pe-4"><button class="btn btn-sm btn-light border">Edit</button></td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold">Jane Smith</td>
                        <td><span class="badge bg-secondary">Viewer</span></td>
                        <td>Read Only</td>
                        <td>3 days ago</td>
                        <td class="text-end pe-4"><button class="btn btn-sm btn-light border">Edit</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
