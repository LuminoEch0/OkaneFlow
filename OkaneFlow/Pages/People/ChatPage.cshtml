@page "{SelectedUserId?}"
@model OkaneFlow.Pages.People.ChatPageModel
@{
    ViewData["Title"] = "Messages";
}

<div class="container py-4 d-flex flex-column" style="height: calc(100vh - 120px)">
    <div class="mb-4">
        <h1 class="fw-bold mb-1">Messages</h1>
        <p class="text-secondary mb-0">Stay connected with your network and team members.</p>
    </div>

    <ul class="nav nav-tabs mb-4 flex-shrink-0">
        <li class="nav-item">
            <a asp-page="/People/ChatPage" class="nav-link active">Chats</a>
        </li>
        <li class="nav-item">
            <a asp-page="/People/PermissionsPage" class="nav-link">Permissions</a>
        </li>
        <li class="nav-item">
            <a asp-page="/People/OtherDashboardPage" class="nav-link">Other Dashboard</a>
        </li>
    </ul>

    <div class="row g-0 flex-grow-1 overflow-hidden border rounded shadow-sm bg-white" style="min-height: 500px; height: calc(100vh - 280px);">
        <!-- Sidebar: Contacts -->
        <div class="col-md-4 border-end d-flex flex-column h-100 bg-light">
            <div class="p-3 border-bottom bg-white d-flex align-items-center">
                <h6 class="mb-0 fw-bold">Contacts</h6>
            </div>
            <div class="list-group list-group-flush overflow-auto flex-grow-1">
                @foreach (var contact in Model.Contacts)
                {
                    <a asp-page="/People/ChatPage" asp-route-SelectedUserId="@contact.UserId" 
                       class="list-group-item list-group-item-action p-3 @(contact.IsActive ? "active" : "")">
                        <div class="d-flex align-items-center">
                            <div class="bg-secondary text-white rounded-circle p-2 me-3" style="width:40px; text-align:center;">
                                @contact.Initials
                            </div>
                            <span class="fw-bold">@contact.Username</span>
                        </div>
                    </a>
                }
            </div>
        </div>

        <!-- Chat Area -->
        <div class="col-md-8 d-flex flex-column h-100 bg-white">
            @if (Model.SelectedUserId.HasValue)
            {
                <div class="flex-grow-1 p-4 overflow-auto" id="messageContainer">
                    @foreach (var msg in Model.Messages)
                    {
                        <div class="d-flex mb-3 @msg.AlignmentClass">
                            <div class="p-3 rounded-4 shadow-sm @msg.BubbleColor" style="max-width: 75%;">
                                <p class="mb-1">@msg.Content</p>
                                <small class="opacity-75 d-block text-end" style="font-size: 0.7rem;">@msg.TimeLabel</small>
                            </div>
                        </div>
                    }
                </div>

                <div class="p-3 border-top bg-light flex-shrink-0">
                    <form method="post" class="input-group">
                        <input type="text" asp-for="NewMessage" class="form-control rounded-pill me-2" placeholder="Write a message..." autocomplete="off">
                        <button class="btn btn-primary rounded-circle" style="width:45px; height:45px;"><i class="bi bi-send-fill"></i></button>
                    </form>
                </div>
            }
            else
            {
                <div class="m-auto text-center text-muted">
                    <i class="bi bi-chat-dots display-1 d-block mb-3"></i>
                    <p>Select a contact to start chatting</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat
        const container = document.getElementById('messageContainer');
        if (container) container.scrollTop = container.scrollHeight;
    </script>
}