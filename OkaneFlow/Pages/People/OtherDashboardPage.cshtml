    ViewData["Title"] = "Community Dashboards";

}
<div class="container py-4">
    <div class="mb-4">
        <h1 class="fw-bold mb-1">Other Dashboards</h1>
        <p class="text-secondary mb-0">Access shared insights and explore community-driven financial data.</p>
    </div>
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a asp-area="" asp-page="/People/ChatPage" class="nav-link">Chats</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/People/PermissionsPage" class="nav-link">Permissions</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/People/OtherDashboardPage" class="nav-link active">Other Dashboard</a>
