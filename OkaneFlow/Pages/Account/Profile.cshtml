@page
@model OkaneFlow.Pages.Account.AccountModel
@{
    ViewData["Title"] = "Account - Profile";
}

<div class="container py-4">
    <!-- Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Account/Profile">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Security">Security</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Preferences">Preferences</a>
        </li>
    </ul>

    <!-- Profile Content -->
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-5 text-center">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3 text-secondary">
                <i class="bi bi-person-circle fs-1"></i>
            </div>
            <h3 class="fw-bold text-secondary">Profile Settings</h3>
            <p class="text-muted">Update your personal information.</p>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6 text-start">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" value="John Doe" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="john.doe@example.com" readonly>
                    </div>
                    <button class="btn btn-primary w-100" disabled>Save Changes (Coming Soon)</button>
                </div>
            </div>
        </div>
    </div>
</div>