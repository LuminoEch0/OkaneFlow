@page
@model OkaneFlow.Pages.Account.PreferencesModel
@{
    ViewData["Title"] = "Account - Preferences";
}

<div class="container py-4">
    <!-- Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Profile">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Security">Security</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Account/Preferences">Preferences</a>
        </li>
    </ul>

    <!-- Preferences Content -->
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-5 text-center">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3 text-secondary">
                <i class="bi bi-sliders fs-1"></i>
            </div>
            <h3 class="fw-bold text-secondary">Preferences</h3>
            <p class="text-muted">Customize your application experience.</p>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6 text-start">
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                        <label class="form-check-label" for="darkModeSwitch">Dark Mode</label>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="emailNotifSwitch" checked>
                        <label class="form-check-label" for="emailNotifSwitch">Email Notifications</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

