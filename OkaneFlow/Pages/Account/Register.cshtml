@page
@model OkaneFlow.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null; // simple standalone page
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleAuthApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-2xl space-y-6">
        <h1 class="text-3xl font-extrabold text-center text-indigo-700">Create Account</h1>
        <p class="text-center text-sm text-gray-500">
            Register a new user account.
        </p>

        <form method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <!-- Username Input -->
            <div>
                <label for="Input_Username" class="block text-sm font-medium text-gray-700">Username</label>
                <input asp-for="Input.Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.Username" class="text-red-500 text-xs"></span>
            </div>

            <!-- Email Input -->
            <div>
                <label for="Input_Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Input.Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>

            <!-- Password Input -->
            <div>
                <label for="Input_Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Input.Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Register
                </button>
            </div>
        </form>
        <div class="text-center text-sm">
            <a asp-page="/Account/Login" class="text-indigo-600 hover:underline">Already have an account? Log in</a>
        </div>
    </div>
</body>
