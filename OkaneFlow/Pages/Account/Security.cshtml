@page
@model OkaneFlow.Pages.Account.SecurityModel
@{
    ViewData["Title"] = "Account - Security";
}

<div class="container py-4">
    <!-- Account Navigation -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Profile">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fw-bold" asp-page="/Account/Security">Security</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary" asp-page="/Account/Preferences">Preferences</a>
        </li>
    </ul>

    <!-- Security Content -->
    <div class="card shadow-sm border-top-0 rounded-bottom">
        <div class="card-body p-5 text-center">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3 text-secondary">
                <i class="bi bi-shield-check fs-1"></i>
            </div>
            <h3 class="fw-bold text-secondary">Security</h3>
            <p class="text-muted">Manage your password and security settings.</p>
            <button class="btn btn-primary mt-2" disabled>Change Password (Coming Soon)</button>
            <button class="btn btn-outline-danger mt-2">Enable 2FA</button>
        </div>
    </div>
</div>
