@page
@model OkaneFlow.Pages.Account.AccountModel
@{
    ViewData["Title"] = "Account";
}

<div class="container py-4">
    <h2 class="mb-3">Manage Account</h2>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.StatusMessage
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Account Summary</h5>
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.CreationDate.ToString("g")</dd>
            </dl>
            <a asp-page="/Dashboard/MainDashboard/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            <a asp-page="/Account/Logout" class="btn btn-outline-secondary">Sign Out</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Edit Profile</h5>
                    <form method="post" asp-page-handler="UpdateProfile">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Profile.Username" class="form-label"></label>
                            <input asp-for="Profile.Username" class="form-control" />
                            <span asp-validation-for="Profile.Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Profile.Email" class="form-label"></label>
                            <input asp-for="Profile.Email" class="form-control" />
                            <span asp-validation-for="Profile.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <form method="post" asp-page-handler="ChangePassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PasswordChange.CurrentPassword" class="form-label"></label>
                            <input asp-for="PasswordChange.CurrentPassword" class="form-control" />
                            <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordChange.NewPassword" class="form-label"></label>
                            <input asp-for="PasswordChange.NewPassword" class="form-control" />
                            <span asp-validation-for="PasswordChange.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordChange.ConfirmPassword" class="form-label"></label>
                            <input asp-for="PasswordChange.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-warning">Change password</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h6>Account Deletion</h6>
                    <p class="small text-muted">If you wish to delete your account please contact an administrator. (Deletion is not available in-app.)</p>
                </div>
            </div>
        </div>
    </div>
</div>