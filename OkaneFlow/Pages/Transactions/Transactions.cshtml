@page "{accountId:guid?}"
@model OkaneFlow.Pages.Transactions.TransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Transactions</h1>
            <p class="text-secondary mb-0">Track your income and expenses</p>
        </div>
        <div>
            @if (Model.AccountId != Guid.Empty)
            {
                <a asp-page="/Transactions/Create" asp-route-accountId="@Model.AccountId" class="btn btn-primary shadow-sm">
                    <i class="bi bi-plus-lg"></i> Add Transaction
                </a>
            }
        </div>
    </div>

    <button type="button" onclick="goBack()" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back
    </button>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Date</th>
                            <th class="py-3">Description</th>
                            <th class="py-3">Category</th>
                            <th class="text-end py-3">Amount</th>
                            <th class="pe-4 text-end py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Transactions != null && Model.Transactions.Any())
                        {
                            @foreach (var transaction in Model.Transactions)
                            {
                                var isExpense = transaction.Type == OkaneFlow.Helpers.Enums.TransactionType.Expense;
                                var amountColor = isExpense ? "text-danger" : "text-success";
                                var amountSign = isExpense ? "-" : "+";

                                <tr>
                                    <td class="ps-4 text-secondary">@transaction.Date.ToLocalTime().ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="fw-bold">@transaction.Description</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            Category @transaction.CategoryID
                                            @* TODO: Fetch Category Name. For now showing ID or need to join in Service *@
                                        </span>
                                    </td>
                                    <td class="text-end fw-bold @amountColor">
                                        @amountSign@transaction.Amount.ToString("C")
                                    </td>
                                    <td class="pe-4 text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-link text-secondary p-0" type="button"
                                                data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                                <li><a class="dropdown-item" asp-page="/Transactions/Edit"
                                                        asp-route-id="@transaction.TransactionID">Edit</a></li>
                                                <li>
                                                    <hr class="dropdown-divider">
                                                </li>
                                                <li><a class="dropdown-item text-danger" asp-page="/Transactions/Delete"
                                                        asp-route-id="@transaction.TransactionID">Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-secondary">
                                    <i class="bi bi-receipt fs-1 d-block mb-3"></i>
                                    No transactions found for this account.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>