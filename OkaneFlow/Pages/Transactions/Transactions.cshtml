@page "{accountId:guid?}"
@model OkaneFlow.Pages.Transactions.TransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Transactions</h1>
            <p class="text-secondary mb-0">Track your income and expenses</p>
        </div>
        <div>
            <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center justify-content-between p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle text-primary">
                            <i class="bi bi-bank2 fs-5"></i>
                        </div>
                        <div>
                            <label for="accountSelect" class="form-label mb-0 text-secondary small fw-bold text-uppercase">Current Account</label>
                            <select id="accountSelect" class="form-select border-0 bg-transparent fw-bold fs-5 py-0 ps-0 shadow-none" onchange="window.location.href='?accountId=' + this.value" style="cursor: pointer; width: auto; min-width: 200px;">
                                @foreach (var account in Model.BankAccounts)
                                {
                                    <!option value="@account.AccountID" @(account.AccountID == Model.AccountId ? "selected" : "")>@account.AccountName - @account.CurrentBalance.ToString("C").Replace("$", "€")</!option>
                                }
                            </select>
                        </div>
                    </div>
                    @if (Model.AccountId != Guid.Empty)
                    {
                        <a asp-page="/Transactions/Create" asp-route-accountId="@Model.AccountId" class="btn btn-primary shadow-sm">
                            <i class="bi bi-plus-lg"></i> Add Transaction
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Transactions List -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive-md pb-5">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3">Date</th>
                                    <th class="py-3">Description</th>
                                    <th class="py-3">Category</th>
                                    <th class="text-end py-3">Amount</th>
                                    <th class="pe-4 text-end py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions != null && Model.Transactions.Any())
                                {
                                    @foreach (var transaction in Model.Transactions)
                                    {
                                        var isExpense = transaction.Type == OkaneFlow.Helpers.Enums.TransactionType.Expense;
                                        var amountColor = isExpense ? "text-danger" : "text-success";
                                        var amountSign = isExpense ? "-" : "+";
                                        var categoryName = Model.CategoryNames.ContainsKey(transaction.CategoryID) ? Model.CategoryNames[transaction.CategoryID] : "Unassigned";

                                        <tr>
                                            <td class="ps-4 text-secondary">
                                                @transaction.Date.ToLocalTime().ToString("MMM dd, yyyy")
                                            </td>
                                            <td class="fw-bold">@transaction.Description</td>
                                            <td>
                                                <span class="badge bg-light text-dark border">
                                                    @categoryName
                                                </span>
                                            </td>
                                            <td class="text-end fw-bold @amountColor">
                                                @amountSign@transaction.Amount.ToString("C").Replace("$", "€")
                                            </td>
                                            <td class="pe-4 text-end">
                                                <div class="dropdown">
                                                    <button class="btn btn-link text-secondary p-0" type="button"
                                                            data-bs-toggle="dropdown" data-bs-boundary="viewport">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                                        <li>
                                                            <a class="dropdown-item" asp-page="/Transactions/Edit"
                                                               asp-route-id="@transaction.TransactionID">Edit</a>
                                                        </li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" asp-page="/Transactions/Delete"
                                                               asp-route-id="@transaction.TransactionID">Delete</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-secondary">
                                            <i class="bi bi-receipt fs-1 d-block mb-3"></i>
                                            @if (Model.AccountId == Guid.Empty)
                                            {
                                                <span>Select an account to view transactions.</span>
                                            }
                                            else
                                            {
                                                <span>No transactions found for this account.</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>