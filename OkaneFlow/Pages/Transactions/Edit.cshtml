@page "{id:guid}"
@model OkaneFlow.Pages.Transactions.EditModel
@{
    var prefs = ViewContext.HttpContext.Items["UserPreferences"] as UserPreferenceModel;
    var currencySymbol = FormatHelper.FormatCurrency(0, prefs?.Currency ?? "EUR").Substring(0, 1);
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6" style="max-width: 600px;">
            <h2 class="text-primary fw-bold mb-4">Edit Transaction</h2>
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Transaction.TransactionID" />

                        <div class="mb-3">
                            <label asp-for="Transaction.Description" class="form-label text-secondary small fw-bold text-uppercase">Description</label>
                            <input asp-for="Transaction.Description" class="form-control" />
                            <span asp-validation-for="Transaction.Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Transaction.Amount" class="form-label text-secondary small fw-bold text-uppercase">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">@currencySymbol</span>
                                <input asp-for="Transaction.Amount" class="form-control border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Transaction.Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Transaction.Type" class="form-label text-secondary small fw-bold text-uppercase">Type</label>
                            <select asp-for="Transaction.Type" class="form-select" asp-items="Html.GetEnumSelectList<OkaneFlow.Helpers.Enums.TransactionType>()"></select>
                            <span asp-validation-for="Transaction.Type" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Transaction.CategoryID" class="form-label text-secondary small fw-bold text-uppercase">Category</label>
                            <select asp-for="Transaction.CategoryID" class="form-select" asp-items="Model.CategoryOptions">
                                <option value="">Select a category...</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Transaction.Date" class="form-label text-secondary small fw-bold text-uppercase">Date</label>
                            <input asp-for="Transaction.Date" class="form-control" type="date" />
                            <span asp-validation-for="Transaction.Date" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <button type="button" onclick="history.back()" class="btn btn-light text-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
